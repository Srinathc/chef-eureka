<Server port="8005" shutdown="SHUTDOWN">
  <Listener className="org.apache.catalina.core.AprLifecycleListener" SSLEngine="on" />
  <Listener className="org.apache.catalina.core.JasperListener" />
  <Listener className="org.apache.catalina.core.JreMemoryLeakPreventionListener" />
  <Listener className="org.apache.catalina.mbeans.GlobalResourcesLifecycleListener" />
  <Listener className="org.apache.catalina.core.ThreadLocalLeakPreventionListener" />
  <Service name="Catalina">
    <Connector port="<%= node["tomcat"]["port"] %>" protocol="HTTP/1.1"
               redirectPort="<%= node["tomcat"]["ssl_port"] %>" secure="true" />
    <Engine name="Catalina" defaultHost="localhost">
      <Host appBase="webapps" autoDeploy="false" deployOnStartup="false"
            name="localhost" unpackWARs="true" xmlValidation="false"
            xmlNamespaceAware="false">
        <Context className="org.apache.catalina.core.StandardContext"
                 cachingAllowed="true"
                 charsetMapperClass="org.apache.catalina.util.CharsetMapper"
                 cookies="true" crossContext="false" displayName="Welcome to Eureka"
                 docBase="eureka" path="/eureka" privileged="false"
                 reloadable="false" swallowOutput="false" useNaming="true"
                 wrapperClass="org.apache.catalina.core.StandardWrapper">
        </Context>
        <Valve className="org.apache.catalina.valves.AccessLogValve" 
               pattern="'%h %t &quot;%r&quot; %s %Dms %b"/>
      </Host>
    </Engine>
  </Service>
</Server>